{% extends "layout.njk" %}

{% block head %}
  <title>Sobre</title>
{% endblock %}

{% block content %}
  <div id="wrapper">
    <img src="{{ about.image }}" alt="Mayk Brito">
    <h1>{{ about.title }}</h1>
    <h2>{{ about.description }}</h2>
    <p>{{ about.present }} </p>

    <ul>
      {% for tech in about.technologies %}
        <li>{{ tech.name }}</li>
      {% endfor %}
    </ul>
  </div>

  <div id="links-footer" class="links">
    {% for link in about.links %}
    <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>
  <div class="footer">

  </div>
{% endblock %}